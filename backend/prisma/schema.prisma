// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  author    User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  content   String

  @@index([createdAt, updatedAt])
}

model User {
  id           Int       @id @default(autoincrement())
  role         Role      @default(User)
  createdAt    DateTime  @default(now())
  username     String    @unique
  displayName  String?
  banned       Boolean   @default(false)
  bannedUntil  DateTime  @default(now())
  password     String
  refreshToken String[] // this is a list of INVALID refreshTokens (if a user logged out etc.)
  messages     Message[]

  @@index([createdAt])
}

enum Role {
  User // A normal user
  Moderator // A user that can moderate normal users
  Admin // A user that can also moderate moderators
}
